{
  "name": "giosg Live extension",
  "short_name": "giosg Live extension",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Extension for giosg Live chat. It toggles operator state automatically offline when computer goes to locked or idle state.",
  "homepage_url": "https://github.com/mentholi/giosg-live-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "src/options_custom/default_hosts.js",
      "src/options_custom/lib/store.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "externally_connectable": {
    "matches": []
  },
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "idle",
    "notifications",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/options_custom/default_hosts.js",
        "src/inject/inject.js"
      ]
    }
  ]
}